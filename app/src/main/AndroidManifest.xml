<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.recruitsystem.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_image"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_image_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.recruitsystem.myapplication.activities.PostResumeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.recruitsystem.myapplication.activities.HelpAndFeedbackActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.activities.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.activities.AccountAndSecurityActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.activities.ChangeUserAdvantageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.activities.ChangeNickNameActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.activities.ChangeNameActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.ui.collections.CollectionsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.recruitsystem.myapplication.activities.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.recruitsystem.myapplication.ui.info.ShowJobPostDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.ui.user.UserInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.ui.info.ZPInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.ui.search.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.recruitsystem.myapplication.Main2Activity"
            android:label="主页" />
        <activity android:name="com.recruitsystem.myapplication.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.recruitsystem.myapplication.AddActivity" />
        <activity
            android:name="com.recruitsystem.myapplication.activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="PhotoPicker"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/photo_path" />
        </provider>
    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>